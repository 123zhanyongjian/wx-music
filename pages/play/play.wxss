.close{
  position: absolute;
  top: 10rpx;
  right: 0;
  font-size:26rpx;
  float: right;
  margin-right: 10rpx;
  color: white;
  padding:10rpx; 
  
}
.clear{
   position: absolute;
  top: 10rpx;
  left: 0;
  font-size:26rpx;
  float: right;
  margin-right: 10rpx;
  color: white;
  padding:10rpx; 
}
@-webkit-keyframes close{
  from{
    top:50%;
  }
  to{
    top: 100%;
   
  }
}
@-webkit-keyframes open{
  from{
    top:100%;
  }
  to{
    top: 50%;
   
  }
}
.closes{
  animation: close .3s linear infinite;
  animation-iteration-count:1;
  animation-fill-mode : forwards;/*保留动画最后的样子*/
  
}
.opens{
  animation: open .3s linear infinite;
  animation-iteration-count:1;
  animation-fill-mode : forwards;/*保留动画最后的样子*/
}
